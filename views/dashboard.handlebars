<section class="blog-post ">
  <h2>Create New Blog Post</h2>

  <form class="new-post-form">
    <div>
      <input type="text" id="post-title" name="post-title" placeholder="title" />
    </div>
    <div>
      <textarea id="post-content" class="" placeholder="text"></textarea>
    </div>
    <button type="submit" class="btn alt-btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="blog-post">
  <h3>Your Posts</h3>
  <ol>
    {{#each posts as |post|}}
    <li class="">
      {{> post-info post}}
      <button class="btn"><a href="/dashboard/edit/{{post.id}}" class="">Edit post</a></button>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>