<article class="article blog-post">
    <a href="/dashboard" class="btn"> &larr; Back to dashboard</a>
    <h2 class="">
        Edit Your Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Post Title:</label>
            <input name="post-title" type="text" class="" value="{{post.title}}" />
        </div>
        <div>
            <textarea name="new-content"class="edit-content" />{{post.content}}</textarea>
        </div>
        <div>
            Created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="save-post-btn btn">Save post</button>
        <button type="button" class="delete-post-btn btn">Delete post</button>
    </form>
</article>

<form class="comment-form blog-post">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit" class="btn">add comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>